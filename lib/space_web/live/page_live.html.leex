<section class="row">
  <article class="column">
    <p>Welcome to <em>Space</em>.</p>
    <%= if is_nil(@name) do %>
      <form phx-submit="change_name">
        <label phx-value="name" for="name">Name</label>
        <input type="text" id="name" name="name">
        <button type="submit">Ok</submit>
      </form>
    <% else %>
        Hi <%= @name %>
    <% end %>
  </article>
</section>
